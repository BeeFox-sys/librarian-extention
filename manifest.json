{
    "manifest_version": 2,
    "name": "RSS Librarian Save Button",
    "version": "1.0",
    "description": "Allows you to save any page to RSS Librarian",

    "browser_specific_settings": {
        "gecko": {
            "id": "beefox@rss_librarian_addon",
            "strict_min_version": "58.0"
        }
    },
  
    "icons": {
        "48": "librarius-02.svg"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "alarms"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "options_ui": {
        "page": "options.html"
    },
    "page_action": {
        "default_icon": "librarius-02.svg",
        "default_title": "Save to RSS Librarian",
        "show_matches": [
            "<all_urls>"
        ]
    }
}